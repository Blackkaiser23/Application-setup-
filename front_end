<body>
    <h1>ðŸ“ˆ SIP Calculator</h1>

    <label for="monthlyInvestment">Monthly Investment (P):</label>
    <input type="number" id="monthlyInvestment" value="5000" min="100">

    <label for="annualRate">Annual Rate of Return (r) in %:</label>
    <input type="number" id="annualRate" value="12" min="1" max="100">

    <label for="timePeriod">Time Period (t) in Years:</label>
    <input type="number" id="timePeriod" value="10" min="1">

    <button onclick="calculateSIP()">Calculate</button>

    <div id="result">
        <h2>Result:</h2>
        <p id="totalValue">Future Value: -</p>
        <p id="investedAmount">Total Invested: -</p>
        <p id="estimatedGain">Estimated Gain: -</p>
    </div>

    <script>
        async function calculateSIP() {
            const monthlyInvestment = parseFloat(document.getElementById('monthlyInvestment').value);
            const annualRate = parseFloat(document.getElementById('annualRate').value);
            const timePeriod = parseFloat(document.getElementById('timePeriod').value);

            if (isNaN(monthlyInvestment) || isNaN(annualRate) || isNaN(timePeriod)) {
                alert("Please enter valid numbers for all fields.");
                return;
            }

            try {
                // Call the backend API
                const response = await fetch('/calculate', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        monthly_investment: monthlyInvestment,
                        annual_rate: annualRate,
                        time_period: timePeriod
                    })
                });

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const data = await response.json();

                // Display the results
                document.getElementById('totalValue').textContent = `Future Value: â‚¹${data.future_value.toLocaleString('en-IN', { maximumFractionDigits: 2 })}`;
                document.getElementById('investedAmount').textContent = `Total Invested: â‚¹${data.invested_amount.toLocaleString('en-IN', { maximumFractionDigits: 2 })}`;
                document.getElementById('estimatedGain').textContent = `Estimated Gain: â‚¹${data.estimated_gain.toLocaleString('en-IN', { maximumFractionDigits: 2 })}`;

            } catch (error) {
                console.error('Error calculating SIP:', error);
                document.getElementById('totalValue').textContent = 'Future Value: Error calculating.';
                document.getElementById('investedAmount').textContent = 'Total Invested: -';
                document.getElementById('estimatedGain').textContent = 'Estimated Gain: -';
            }
        }
    </script>
</body>
</html>
